<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.inha.wgcloud.file.repository.FileRepository">
    <select id="selectFileList" resultType="kr.ac.inha.wgcloud.file.vo.FileVo">
        SELECT
            *
        FROM
            directory
        WHERE
            empId = #{empId}
    </select>
    <insert id="insertFile" parameterType="kr.ac.inha.wgcloud.file.vo.FileVo">
        INSERT INTO
        directory
        (
            dirId,
            groupId,
            empId,
            rootDirId,
            `name`,
            orgFileName,
            ext,
            fileSize,
            filePath,
            sharedEmpId,
            isFile,
            downCount,
            isDeleted,
            createDateTime,
            updateDateTime
        ) VALUES
        (
            NULL,
            #{groupId},
            #{empId},
            #{rootDirId},
            #{name},
            #{orgFileName},
            #{ext},
            #{fileSize},
            #{filePath},
            #{sharedEmpId},
            #{isFile},
            #{downCount},
            0,
            now(),
            NULL
        )
    </insert>
</mapper>